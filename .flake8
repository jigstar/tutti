[flake8]
ignore =
    # Missing docstring
    D1
    # Missing blank line after last docstring section
    D413
exclude =
    .git,
    __pycache__,
    */migrations,
    old_not_used
max-complexity = 10
max-line-length = 120

# docstrings
docstring-convention = google

# import order
import-order-style = pycharm
application-import-names =
    qluis
    main
    ldapsync
